package view;

import java.util.Scanner;

public class RockPaperScissorsMain {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		System.out.println("베팅 가위바위보");
	
	    System.out.print("베팅할 점수를 입력하세요> ");
