			if(select == 1) { // 학생전체조회
				System.out.println("===== 학생전체조회 =====");
				con.selectAll();
				
			}else if(select == 2){ // 학생검색 
				System.out.println("===== 학생검색 =====");
				System.out.print("이름>> ");
				String name = sc.next();

				StudentDTO dto = new StudentDTO(name);
				con.selectOne(dto);
				
			}else if(select == 3){ // 학생등록 - insert()
				System.out.println("===== 학생등록 =====");
