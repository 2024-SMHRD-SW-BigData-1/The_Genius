				System.out.println("변경할 학과 입력>> ");
				String cls = sc.next();
				StudentDTO dto = new StudentDTO(name, age, cls);
				con.update(dto);
				
			}else if(select == 5){ // 학생정보삭제 - delete()
				System.out.print("이름>> ");
				String name = sc.next();
				System.out.print("학과>> ");
				String cls = sc.next();
				
				StudentDTO dto = new StudentDTO(name, cls);
				
				// dto를 Controller에게 보내주자
				con.delete(dto);
			}else if(select == 6){ // 프로그램종료
				System.out.println("프로그램이 종료되었습니다 :)");
				break;
			}
		}
	
	
	
